<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/ManufacturerCar"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:text="@string/Manufacturer"
                android:gravity="left"
                android:padding="16dp"
                android:textColor="@color/White"
                android:textSize="16dp" />


            <TextView
                android:layout_weight="1"
                android:id="@+id/ManufacturerCarResult"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:maxLength="20"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:id="@+id/ModelCar"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Model"
                android:textColor="@color/White"

                android:padding="16dp"
                android:gravity="left"/>


            <TextView
                android:layout_weight="1"
                android:id="@+id/ModelCarResult"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:maxLength="20"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>

        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_weight="1"
                android:id="@+id/RegistyNumCar"
                android:textSize="16dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/RegNumber"
                android:textColor="@color/White"
                android:padding="16dp"
                android:gravity="left"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/RegistyNumCarResult"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/White"
                android:inputType="text"
                android:textColor="@color/White"
                android:maxLength="15"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:id="@+id/chassisNumCar"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Chassis"
                android:textColor="@color/White"
                android:padding="16dp"
                android:gravity="left"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/chassisNumCarResult"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/White"
                android:inputType="text"
                android:textColor="@color/White"
                android:maxLength="15"
                android:padding="16dp"
                android:gravity="right"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:id="@+id/FuelTypeCar"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fuel"
                android:textColor="@color/White"
                android:padding="16dp"
                android:gravity="left"
                />


            <TextView
                android:layout_weight="1"
                android:id="@+id/FuelTypeCarResult"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/White"
                android:inputType="text"
                android:textColor="@color/White"
                android:maxLength="12"
                android:padding="16dp"
                android:gravity="right"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/YearCar"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Production"
                    android:textColor="@color/White"
                    android:padding="16dp"
                    android:gravity="left"
                    />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/YearCarResult"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/White"
                    android:maxLength="12"
                    android:textColor="@color/White"
                    android:padding="16dp"
                    android:gravity="right"
                    />
                </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:id="@+id/MileageCar"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Mileage"
                android:textColor="@color/White"
                android:padding="16dp"
                android:gravity="left"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/MileageCarResult"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:maxLength="12"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/lastServicedCar"
                android:textSize="16dp"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:text="@string/Serviced"
                android:textColor="@color/White"
                android:padding="15dp"
                android:gravity="left"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/lastServicedCarResult"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:maxLength="12"
                android:padding="16dp"
                android:gravity="right"
                />
        </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ButtonListCars"
                style="?android:textAppearanceSmall"
                android:layout_marginTop="16dp"
                android:text="@string/deleteCars"
                android:background="@color/colorAccent"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>